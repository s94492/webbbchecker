# 主機 IP 設定 - 可替換為外網IP
HOST_IP=http://localhost

# InfluxDB 設定
INFLUXDB_TOKEN=mytoken
INFLUXDB_ORG=myorg
INFLUXDB_BUCKET=website-monitor

# 資料留存設定
DATA_RETENTION_DAYS=180
DATA_RETENTION_POLICY=6months
AUTO_CLEANUP_ENABLED=true

# Grafana 設定
GRAFANA_ADMIN_PASSWORD=admin

# IP 白名單設定 (以逗號分隔，只允許這些IP訪問服務)
ALLOWED_IPS=122.146.90.137,127.0.0.1,10.0.0.1
FIREWALL_ENABLED=true